#!/usr/bin/env zsh

################################################################################
#                                                                              #
#   ðŸŽ¯ CORE SYSTEM INSTALLER                                                   #
#   ----------------------                                                     #
#   Master orchestrator that executes all core system setup scripts in        #
#   the correct order for a complete development environment setup.           #
#                                                                              #
################################################################################

setopt EXTENDED_GLOB
source $MY/core/helper

echo_task_start "Initializing core system setup"
echo_space

################################################################################
# ðŸ”§ CORE SYSTEM COMPONENTS
################################################################################

echo_info "Executing core installation sequence"
$MY/core/apps/pcloud         # Cloud storage synchronization
$MY/core/default-folders # Create default directories
$MY/core/dotfiles       # User configuration files
$MY/core/packages/brew          # Package manager and system tools
$MY/core/packages/antidote      # Zsh plugin manager
$MY/core/packages/gem           # Ruby package management
$MY/core/packages/pip           # Python package management
$MY/core/packages/npm           # Node.js package management
$MY/core/packages/mas           # Mac App Store applications
$MY/core/submodules    # Git submodule dependencies
$MY/core/cli/neovim        # Text editor configuration
$MY/core/cli/aicommits     # AI-powered commit messages
$MY/core/cli/abbr          # Shell abbreviations
$MY/core/apps/sublime-merge # Git GUI client
$MY/core/apps/keepassxc     # Password manager

echo_space
echo_task_done "Core system setup completed successfully"
echo_space
echo_success "All core components have been installed and configured!"
