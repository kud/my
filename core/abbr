#!/usr/bin/env zsh

# core/abbr: Load useful abbreviations for your shell

source ~/.zshrc

# Only load if abbr command is available
if ! command -v abbr >/dev/null; then
  echo "abbr: 'abbr' command not found. Please install zsh-abbr."
  return 1
fi

abbr gco="git checkout"
abbr gst="git status"
abbr gaa="git add --all"
abbr gcm="git commit -m"
abbr gl="git pull"
abbr gp="git push"
abbr gbr="git branch"
abbr gmg="git merge"
abbr gpo="git push origin"
abbr ~="cd ~"

# Automatically reload zsh config after updating abbreviations
if [[ -n "$ZSH_VERSION" && -o interactive ]]; then
  echo "Reloading your shell to apply new abbreviations..."
  source ~/.zshrc
fi
