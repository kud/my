#! /usr/bin/env zsh

# main command
source $MY/core/helper

if [[ $# -eq 0 ]]; then
  $0 --help
else

  case "$1" in
  install)
    $MY/core/install
    ;;
  update)
    $MY/core/update
    ;;
  ssh-setup)
    $MY/core/ssh-setup
    ;;
  dotfiles)
    $MY/core/dotfiles
    ;;
  symlink)
    $MY/core/symlink
    ;;
  os)
    $MY/core/os
    ;;
  fonts)
    $MY/core/fonts
    ;;
  firefox-settings)
    $MY/core/firefox-settings
    ;;
  shims)
    $MY/core/shims
    ;;
  brew-clean)
    $MY/core/brew-clean
    ;;
  npm-clean)
    $MY/core/npm-clean
    ;;
  doc)
    case "$2" in
    --offline)
      mdlive --dir $MY/doc
      ;;
    *)
      open https://github.com/kud/my/tree/master/doc
      ;;
    esac
    ;;
  edit)
    code $MY
    ;;
  open)
    open $MY
    ;;
  --help)
    source $MY/core/intro

    echo_space
    printf "Usage:"
    echo_spacex2
    printf "    install           Start the installation process"
    echo_space
    printf "    update            Update the project"
    echo_space
    printf "    ssh-setup         Configure SSH keys for GitHub"
    echo_space
    printf "    dotfiles          Update dotfiles"
    echo_space
    printf "    symlink           Update symlinks"
    echo_space
    printf "    os                Update OS settings"
    echo_space
    printf "    fonts             Update fonts"
    echo_space
    printf "    firefox-settings  Update Firefox settings"
    echo_space
    printf "    shims             Create shell command for .app"
    echo_space
    printf "    brew-clean        Clean the casks"
    echo_space
    printf "    npm-clean         Clean global Node packages"
    echo_space
    printf "    doc               Access project documentation"
    echo_space
    printf "    edit              Open project in \$EDITOR"
    echo_space
    printf "    open              Open project directory in Finder"
    echo_space
    ;;
  *)
    echo "Error: Unrecognized command '$1'. Use --help for a list of commands."
    exit 1
    ;;
  esac

fi
