#! /usr/bin/env zsh

# main command

source $MY/core/helper

if [[ $# -eq 0 ]]; then
  $0 --help
else

  case "$1" in
      bam)
        $MY/core/bam
      ;;
      doc)
        case "$2" in
          --offline)
            mdlive --dir $MY/doc
          ;;
          *)
            open https://github.com/kud/my/tree/master/doc
          ;;
        esac
      ;;
      osx)
        $MY/core/osx
      ;;
      dotfiles)
        $MY/core/dotfiles
      ;;
      symlink)
        $MY/core/symlink
      ;;
      fonts)
        $MY/core/fonts
      ;;
      firefox-settings)
        $MY/core/firefox-settings
      ;;
      shims)
        $MY/core/shims
      ;;
      bootstrap)
        $MY/core/bootstrap
      ;;
      edit)
        subl $MY
      ;;
      open)
        open $MY
      ;;
      --help)

        source $MY/core/intro

        echo_space
        printf "Usage:"
        echo_spacex2
        printf "    ${COLOUR_CYAN}Â£${COLOUR_RESET} [<command>|--help]"
        echo_spacex3
        printf "Commands:"
        echo_spacex2
        printf "    bam               ${COLOUR_BLACK}Start the install/update process${COLOUR_RESET}"
        echo_space
        printf "    doc               ${COLOUR_BLACK}Start a server to read the doc${COLOUR_RESET}"
        echo_space
        printf "    osx               ${COLOUR_BLACK}Update osx setttings${COLOUR_RESET}"
        echo_space
        printf "    dotfiles          ${COLOUR_BLACK}Update dotfiles${COLOUR_RESET}"
        echo_space
        printf "    symlink           ${COLOUR_BLACK}Update symlinks${COLOUR_RESET}"
        echo_space
        printf "    fonts             ${COLOUR_BLACK}Update fonts${COLOUR_RESET}"
        echo_space
        printf "    firefox-settings  ${COLOUR_BLACK}Update firefox settings${COLOUR_RESET}"
        echo_space
        printf "    shims             ${COLOUR_BLACK}Create shell command for .app${COLOUR_RESET}"
        echo_space
        printf "    bootstrap         ${COLOUR_BLACK}Make everything${COLOUR_RESET}"
        echo_space
        printf "    edit              ${COLOUR_BLACK}Open with \$EDITOR${COLOUR_RESET}"
        echo_space
        printf "    open              ${COLOUR_BLACK}Open with Finder${COLOUR_RESET}"
        echo_spacex2
      ;;
      *)
        echo 'What did you say?'
      ;;
  esac

fi
